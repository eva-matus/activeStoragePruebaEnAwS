<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
      <% if game.cover.attached? %>
        <td><%= link_to '--->', rails_blob_path(game.cover, disposition: 'attachment') %></td>
        <td><%= image_tag game.cover.variant(resize: '120x90', colorspace: 'gray') %></td>
      <% end %>
        
        <td><%= game.name %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
